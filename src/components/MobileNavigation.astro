---
import githubIcon from '../assets/github.svg';
import linkedinIcon from '../assets/linkedin.svg';
import linktreeIcon from '../assets/linktree.svg';
---

<!-- Mobile Navigation - Hidden on larger screens -->
<div class="md:hidden">
    <!-- Mobile Navigation Drawer -->
    <div 
        id="mobile-drawer" 
        class="fixed inset-y-0 right-0 z-40 w-80 bg-[#282C33] border-l border-[#ABB2BF]/20 transform translate-x-full transition-transform duration-300 ease-in-out"
    >
        <!-- Drawer Header with Icon + Name and Close Button -->
        <div class="flex justify-between items-center p-4">
            <!-- Icon + Name (left side) -->
            <a href="#home" class="flex items-center space-x-2 mobile-nav-link">
                <img src="/favicon.svg" alt="Code Icon" class="w-8 h-8" />
                <span class="text-[#ABB2BF] text-lg font-medium">Mohammed Misran</span>
            </a>
            
            <!-- Close Button (right side) -->
            <button 
                id="mobile-close-button" 
                class="p-2 text-[#ABB2BF] hover:text-white transition-colors"
                aria-label="Close mobile menu"
            >
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <!-- Navigation Links -->
        <nav class="px-4">
            <div class="flex flex-col space-y-6">
                <a 
                    href="#home" 
                    class="text-[#ABB2BF] hover:text-white transition-colors text-xl mobile-nav-link"
                >
                    <span class="text-[#C778DD]">#</span>home
                </a>
                <a 
                    href="#work" 
                    class="text-[#ABB2BF] hover:text-white transition-colors text-xl mobile-nav-link"
                >
                    <span class="text-[#C778DD]">#</span>work
                </a>
                <a 
                    href="#projects" 
                    class="text-[#ABB2BF] hover:text-white transition-colors text-xl mobile-nav-link"
                >
                    <span class="text-[#C778DD]">#</span>projects
                </a>
                <a 
                    href="#about-me" 
                    class="text-[#ABB2BF] hover:text-white transition-colors text-xl mobile-nav-link"
                >
                    <span class="text-[#C778DD]">#</span>about-me
                </a>
                <a 
                    href="#contact" 
                    class="text-[#ABB2BF] hover:text-white transition-colors text-xl mobile-nav-link"
                >
                    <span class="text-[#C778DD]">#</span>contact
                </a>
            </div>

            <!-- Horizontal Social Links for Mobile -->
            <div class="mt-12 pt-8 border-t border-[#ABB2BF]/20">
                <div class="flex justify-center space-x-8">
                    <!-- GitHub Icon -->
                    <a href="https://github.com/Mohd-Misran" target="_blank" class="mobile-nav-link">
                        <img src={githubIcon.src} alt="GitHub" class="w-8 h-8 opacity-70 hover:opacity-100 transition-opacity"/>
                    </a>
                    
                    <!-- LinkedIn Icon -->
                    <a href="https://www.linkedin.com/in/mmisran" target="_blank" class="mobile-nav-link">
                        <img src={linkedinIcon.src} alt="LinkedIn" class="w-8 h-8 opacity-70 hover:opacity-100 transition-opacity"/>
                    </a>

                    <!-- Linktree Icon -->
                    <a href="https://linktr.ee/mmisran" target="_blank" class="mobile-nav-link">
                        <img src={linktreeIcon.src} alt="Linktree" class="w-8 h-8 opacity-70 hover:opacity-100 transition-opacity"/>
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <!-- Backdrop -->
    <div 
        id="mobile-backdrop" 
        class="fixed inset-0 bg-black bg-opacity-50 z-30 hidden"
    ></div>
</div>

